#include<bits/stdc++.h>
using namespace std;


signed main(){
 
	#ifndef ONLINE_JUDGE
    freopen("input.txt","r",stdin);
    freopen("op.txt","w",stdout);
    #endif
    
    int t; cin >> t;

    while(t--){
    	int n, k;
    	cin >> n >> k;

    	int a[n], total = 0;
    	for(int i = 0; i<n; i++){
    		cin >> a[i];
    		total += a[i];
    	}

    	sort(a, a+n);
    	int sum1 = 0, sum2 = 0, sum3 = 0, sum4 = 0;

    	for(int i = 0; i<k; i++){
    		sum1 += a[i];
    		sum2 += a[n-1-i];
    	}

    	sum3 = total - sum2;
    	sum4 = total - sum1;

    	int maxi = max(sum1, max(sum2, max(sum3, sum4)));
    	int mini = min(sum1, min(sum2, min(sum3, sum4)));

    	cout << maxi - mini << "\n";


    }

    return 0;
}

